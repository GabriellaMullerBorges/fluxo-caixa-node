<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>
    <h1><%= title %></h1>
    <br/>
    <div class="dvCaixas">
        <div>
          VALOR TOTAL 
           <%= valor_total.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' }) %>
        </div>
        <div>
         RECEITA
          <%= receitas.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' }) %>
        </div>
        <div>
          DESPESA
           <%= despesas.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' }) %>
         </div>
    </div>

    <div class="dvSearch">
      <div class="dvInput">
        <form action="">
          <input type="text" name="tipo" placeholder="buscar..." class="form-control">
          <button type="submit" class="btn btn-light">Buscar</button>
        </form>
      </div>

      <div>
        <a href="/adicionar" class="btn btn-primary">Add</a>
      </div>
    </div>

    <div class="dvTabela">
      <table class="table">
        <thead class="table-light">
          <tr>
            <th>Tipo</th>
            <th>Valor</th>
            <th>Status</th>
            <th></th> <!-- Coluna vazia -->
          </tr>
        </thead>
        <tbody>
          <% for (const lancamento of extrato) { %>
          <tr>
            <td><%= lancamento.tipo %></td>
            <td> <%= lancamento.valor.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' }) %></td>
            <td><%= lancamento.status %></td>
            <td></td> <!-- Coluna vazia -->
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>
